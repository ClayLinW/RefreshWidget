    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <com.beauty.refreshwidget.load.refresh.PullRefreshLoadPromptLayout
        android:id="@+id/prl_pullSwipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_bottomPrompt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"/>

    </com.beauty.refreshwidget.load.refresh.PullRefreshLoadPromptLayout>

</RelativeLayout>